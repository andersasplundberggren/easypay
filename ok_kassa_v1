        // Skriv ut kvitto
        function printReceipt() {
            if (!currentReceiptData) {
                showStatus('Inget kvitto att skriva ut', 'error');
                return;
            }
            
            const vatGroups = {};
            let totalVat = 0;
            let totalExVat = 0;
            
            currentReceiptData.items.forEach(item => {
                const vatRate = item.vatRate || 12;
                const itemVat = (item.price * vatRate) / (100 + vatRate);
                const itemExVat = item.price - itemVat;
                
                if (!vatGroups[vatRate]) {
                    vatGroups[vatRate] = {
                        rate: vatRate,
                        totalExVat: 0,
                        totalVat: 0
                    };
                }
                
                vatGroups[vatRate].totalExVat += itemExVat;
                vatGroups[vatRate].totalVat += itemVat;
                totalVat += itemVat;
                totalExVat += itemExVat;
            });
            
            const printWindow = window.open('', '_blank');
            const printContent = `
                <!DOCTYPE html>
                <html>
                <head>
                    <title>Kvitto - BIK Karlskoga</title>
                    <style>
                        @media print {
                            body { margin: 0; }
