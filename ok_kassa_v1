    <script>
        // ========================================
        // GOOGLE SHEETS API KONFIGURATION
        // ========================================
        // VIKTIGT: BYT UT DENNA URL MOT DIN WEB APP URL!
        const GOOGLE_APPS_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbwWADYHeT2clN3DSHnIvp-d24APaKiacETGSWK4EecuzjoKru1RbB7a3MsxuqIBrPw/exec';
        
        // ========================================
        // GLOBALA VARIABLER
        // ========================================
        let currentOrder = [];
        let currentReceiptId = null;
        let currentReceiptData = null;
        let products = [];
        
        // ========================================
        // BACKEND FUNKTIONER - GOOGLE SHEETS
        // ========================================
        
        // Hämta produkter från Google Sheets
        async function loadProducts() {
            try {
                showStatus('Laddar produkter från Google Sheets...', 'success');
                
                const response = await fetch(`${GOOGLE_APPS_SCRIPT_URL}?action=getProducts`);
                const result = await response.json();
                
                if (result.error) {
                    throw new Error(result.error);
                }
                
                products = result.data || [];
                displayProducts(products);
                showStatus(`${products.length} produkter laddade från Google Sheets!`, 'success');
            } catch (error) {
                console.error('Fel vid hämtning av produkter:', error);
                showStatus('Kunde inte ladda produkter. Använder backup.', 'error');
                displayBackupProducts();
            }
        }
        
        // Visa produkter i menyn
        function displayProducts(productList) {
            const menuGrid = document.getElementById('menuGrid');
            menuGrid.innerHTML = '';
            
            productList.forEach(product => {
                const menuItem = document.createElement('div');
                menuItem.className = 'menu-item';
                menuItem.dataset.productId = product.id;
                menuItem.dataset.name = product.name;
                menuItem.dataset.price = product.price;
                menuItem.dataset.vatRate = product.vat_rate || 12;
                
                menuItem.innerHTML = `
                    <div class="name">${product.name}</div>
                    <div class="price">${product.price} kr</div>
                    <div class="vat-info">Moms ${product.vat_rate || 12}%</div>
                `;
                
                menuItem.addEventListener('click', function() {
                    addToOrder(
                        product.name, 
                        parseFloat(product.price),
                        product.vat_rate || 12,
                        product.id
                    );
                });
                
                menuGrid.appendChild(menuItem);
            });
        }
        
        // Backup produkter om Google Sheets inte fungerar
        function displayBackupProducts() {
            const backupProducts = [
                { id: 'backup_1', name: 'Kaffe', price: 25, vat_rate: 12 },
                { id: 'backup_2', name: 'Te', price: 20, vat_rate: 12 },
                { id: 'backup_3', name: 'Läsk', price: 30, vat_rate: 12 },
                { id: 'backup_4', name: 'Vatten', price: 15, vat_rate: 12 },
                { id: 'backup_5', name: 'Smörgås', price: 45, vat_rate: 12 },
                { id: 'backup_6', name: 'Varmkorv', price: 35, vat_rate: 12 },
                { id: 'backup_7', name: 'Hamburgare', price: 65, vat_rate: 12 },
                { id: 'backup_8', name: 'Chips', price: 20, vat_rate: 12 },
                { id: 'backup_9', name: 'Glass', price: 25, vat_rate: 12 },
                { id: 'backup_10', name: 'Kaka', price: 30, vat_rate: 12 },
                { id: 'backup_11', name: 'Godis', price: 15, vat_rate: 12 },
                { id: 'backup_12', name: 'Öl (alkoholfri)', price: 35, vat_rate: 12 }
            ];
            displayProducts(backupProducts);
        }
        
        // Spara köp till Google Sheets
        async function savePurchaseToBackend() {
            try {
                const cashierName = document.getElementById('cashierName').value || 'Anonym';
                const totalAmount = currentOrder.reduce((sum, item) => sum + item.price, 0);
                
                // Beräkna moms
                let vatAmount = 0;
                const itemsWithVat = currentOrder.map(item => {
                    const vatRate = item.vatRate || 12;
                    const itemVat = (item.price * vatRate) / (100 + vatRate);
                    vatAmount += itemVat;
                    
                    return {
                        name: item.name,
                        quantity: 1,
                        price: item.price,
                        vat_rate: vatRate,
                        total: item.price,
                        vat_amount: parseFloat(itemVat.toFixed(2))
                    };
                });
                
                const purchaseData = {
                    items: itemsWithVat,
                    amount: parseFloat((totalAmount - vatAmount).toFixed(2)),
                    vat_amount: parseFloat(vatAmount.toFixed(2)),
                    total_amount: totalAmount,
                    status: 'completed',
                    cashier_name: cashierName,
                    swish_reference: 'SWISH_' + Date.now()
                };
                
                console.log('Försöker spara köp till Google Sheets:', purchaseData);
                
                const response = await fetch(`${GOOGLE_APPS_SCRIPT_URL}?action=createPurchase`, {
                    method: 'POST',
                    body: JSON.stringify(purchaseData)
                });
                
                const result = await response.json();
                
                if (result.error) {
                    throw new Error(result.error);
                }
                
                console.log('Köp sparat i Google Sheets:', result.data);
                showStatus('Köp registrerat i Google Sheets!', 'success');
                return result.data;
            } catch (error) {
                console.error('Fel vid sparande av köp:', error);
                
                alert('OBS! Köpet kunde inte sparas i Google Sheets.\n\nFel: ' + error.message + '\n\nKontrollera:\n1. Att Web App URL är korrekt\n2. Att Apps Script är deployt\n3. Konsolen för mer info');
                
                return {
                    id: 'local_' + Date.now(),
                    created_at: new Date().toISOString(),
                    total_amount: currentOrder.reduce((sum, item) => sum + item.price, 0)
                };
            }
        }
        
        // ========================================
        // UI FUNKTIONER
        // ========================================
        
        // Visa statusmeddelanden
        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('statusMsg');
            statusEl.textContent = message;
            statusEl.className = `status ${type}`;
            statusEl.style.display = 'block';
            
            setTimeout(() => {
                statusEl.style.display = 'none';
            }, 4000);
        }
        
        // Lägg till produkt i beställning
        function addToOrder(name, price, vatRate = 12, productId = null) {
            currentOrder.push({
                name, 
                price, 
                vatRate,
                productId,
                timestamp: new Date().toISOString()
            });
            updateOrderDisplay();
            showStatus(`${name} tillagd!`, 'success');
        }
        
        // Ta bort produkt från beställning
        function removeFromOrder(index) {
            const removed = currentOrder.splice(index, 1)[0];
            updateOrderDisplay();
            showStatus(`${removed.name} borttagen!`, 'success');
        }
        
        // Uppdatera beställningsvisning
        function updateOrderDisplay() {
            const orderSummary = document.getElementById('orderSummary');
            const totalElement = document.getElementById('totalAmount');
            
            if (currentOrder.length === 0) {
                orderSummary.innerHTML = '<p style="text-align: center; color: #6c757d;">Ingen beställning ännu...</p>';
                totalElement.textContent = 'Totalt: 0 kr';
                return;
            }
            
            let html = '';
            let total = 0;
            
            currentOrder.forEach((item, index) => {
                html += `
                    <div class="order-item">
                        <span>${item.name}</span>
                        <span>
                            ${item.price} kr
                            <button class="remove-btn" data-index="${index}">×</button>
                        </span>
                    </div>
                `;
                total += item.price;
            });
            
            orderSummary.innerHTML = html;
            totalElement.textContent = `Totalt: ${total} kr`;
        }
        
        // Rensa beställning
        function clearOrder() {
            currentOrder = [];
            updateOrderDisplay();
            document.getElementById('amount').value = '';
            document.getElementById('qrContainer').style.display = 'none';
            document.getElementById('receiptContainer').style.display = 'none';
            currentReceiptId = null;
            currentReceiptData = null;
            showStatus('Beställning rensad!', 'success');
        }
        
        // Överför till QR-generator
        function transferToQR() {
            const total = currentOrder.reduce((sum, item) => sum + item.price, 0);
            
            if (total === 0) {
                showStatus('Lägg till produkter i beställningen först!', 'error');
                return;
            }
            
            const amountField = document.getElementById('amount');
            amountField.value = total;
            
            showStatus(`Belopp ${total} kr överfört till QR-generator!`, 'success');
            
            if (window.innerWidth <= 768) {
                setTimeout(() => {
                    document.querySelector('.section:last-child').scrollIntoView({ 
                        behavior: 'smooth' 
                    });
                    setTimeout(() => {
                        generateQR();
                        setTimeout(() => {
                            showQRFullscreen();
                        }, 1500);
                    }, 800);
                }, 300);
            } else {
                setTimeout(() => {
                    document.getElementById('message').focus();
                }, 300);
            }
        }
        
        // Generera QR-kod
        function generateQR() {
            const swishNumber = '1234701777';
            const amount = document.getElementById('amount').value.trim();
            const message = document.getElementById('message').value.trim();
            
            if (!amount || amount <= 0) {
                showStatus('Ange ett giltigt belopp!', 'error');
                return;
            }
            
            try {
                const formattedAmount = parseFloat(amount).toFixed(2).replace('.', ',');
                const encodedMessage = message ? encodeURIComponent(message) : '';
                const swishString = `C${swishNumber};${formattedAmount};${encodedMessage};0`;
                
                document.getElementById('swishData').innerHTML = `
                    <strong>Swish-data:</strong><br>
                    ${swishString}
                `;
                
                const isMobile = window.innerWidth <= 768;
                const qrSize = isMobile ? 250 : 300;
                
                const qrApiUrl = `https://api.qrserver.com/v1/create-qr-code/?size=${qrSize}x${qrSize}&format=png&data=${encodeURIComponent(swishString)}`;
                
                const qrImage = document.getElementById('qrImage');
                
                qrImage.onload = function() {
                    this.style.display = 'block';
                    document.getElementById('qrContainer').style.display = 'block';
                    showStatus(`QR-kod för ${formattedAmount} SEK klar!`, 'success');
                    document.getElementById('paymentReceivedBtn').style.display = 'block';
                };
                
                qrImage.onerror = function() {
                    showStatus('Kunde inte skapa QR-kod. Kontrollera internet.', 'error');
                };
                
                qrImage.src = qrApiUrl;
                
            } catch (error) {
                console.error('QR-generering fel:', error);
                showStatus('Fel vid QR-generering: ' + error.message, 'error');
            }
        }
        
        // Skapa kvitto efter betalning
        async function createReceipt() {
            if (currentOrder.length === 0) {
                showStatus('Ingen beställning att skapa kvitto för!', 'error');
                return;
            }
            
            document.getElementById('qrContainer').style.display = 'none';
            showStatus('Registrerar köp i Google Sheets...', 'success');
            
            const savedPurchase = await savePurchaseToBackend();
            
            currentReceiptId = savedPurchase.id ? savedPurchase.id.toString() : 'receipt_' + Date.now();
            
            currentReceiptData = {
                id: currentReceiptId,
                timestamp: new Date().toLocaleString('sv-SE'),
                items: [...currentOrder],
                total: currentOrder.reduce((sum, item) => sum + item.price, 0),
                swishNumber: '1234701777',
                companyName: 'BIK Karlskoga café',
                message: document.getElementById('message').value || '',
                cashier: document.getElementById('cashierName').value || 'Anonym',
                backendId: savedPurchase.id
            };
            
            const receiptJson = JSON.stringify(currentReceiptData);
            const encodedReceipt = btoa(encodeURIComponent(receiptJson));
            
            const currentUrl = window.location.href.split('?')[0];
            const receiptUrl = currentUrl + '?receiptData=' + encodedReceipt;
            
            const receiptQrApiUrl = `https://api.qrserver.com/v1/create-qr-code/?size=300x300&format=png&data=${encodeURIComponent(receiptUrl)}`;
            
            const receiptQrImage = document.getElementById('receiptQrImage');
            
            receiptQrImage.onload = function() {
                this.style.display = 'block';
                document.getElementById('receiptContainer').style.display = 'block';
                showStatus('Köp registrerat! Kvitto-QR-kod skapad!', 'success');
            };
            
            receiptQrImage.onerror = function() {
                showStatus('Kunde inte skapa kvitto-QR-kod', 'error');
            };
            
            receiptQrImage.src = receiptQrApiUrl;
        }
        
        // Förhandsgranska kvitto
        function previewReceipt() {
            if (!currentReceiptData) {
                showStatus('Inget kvitto att förhandsgranska', 'error');
                return;
            }
            
            showReceiptFullscreen(currentReceiptData);
        }

        // Visa kvitto i fullskärm
        function showReceiptFullscreen(receiptData) {
            const vatGroups = {};
            let totalVat = 0;
            let totalExVat = 0;
            
            receiptData.items.forEach(item => {
                const vatRate = item.vatRate || 12;
                const itemVat = (item.price * vatRate) / (100 + vatRate);
                const itemExVat = item.price - itemVat;
                
                if (!vatGroups[vatRate]) {
                    vatGroups[vatRate] = {
                        rate: vatRate,
                        totalExVat: 0,
                        totalVat: 0
                    };
                }
                
                vatGroups[vatRate].totalExVat += itemExVat;
                vatGroups[vatRate].totalVat += itemVat;
                totalVat += itemVat;
                totalExVat += itemExVat;
            });
            
            const receiptOverlayContent = document.getElementById('receiptOverlayContent');
            receiptOverlayContent.innerHTML = `
                <div class="receipt-header">
                    <img src="https://sportality.cdn.s8y.se/team-logos/bik1_bik.svg" alt="BIK Karlskoga" class="receipt-logo">
                    <h3 style="margin: 0 0 10px 0; color: #1e3c72; font-size: 1.5em;">BIK KARLSKOGA CAFÉ</h3>
                    <p style="margin: 0; color: #666; font-weight: bold;">KVITTO</p>
                </div>
                
                <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin-bottom: 20px;">
                    <h3 style="margin: 0 0 15px 0; color: #1e3c72;">Köpdetaljer</h3>
                    <p><strong>Datum:</strong> ${receiptData.timestamp}</p>
                    <p><strong>Kvitto-ID:</strong> ${receiptData.id}</p>
                    <p><strong>Kassör:</strong> ${receiptData.cashier}</p>
                    ${receiptData.message ? `<p><strong>Meddelande:</strong> ${receiptData.message}</p>` : ''}
                </div>
                
                <div style="background: #fff; border: 2px solid #dee2e6; border-radius: 10px; padding: 20px; margin-bottom: 20px;">
                    <h3 style="margin: 0 0 15px 0; color: #1e3c72;">Produkter</h3>
                    ${receiptData.items.map(item => {
                        const vatRate = item.vatRate || 12;
                        const itemVat = (item.price * vatRate) / (100 + vatRate);
                        return `<div style="padding: 8px 0; border-bottom: 1px solid #eee;">
                            <div style="display: flex; justify-content: space-between;">
                                <span>${item.name}</span>
                                <span style="font-weight: bold;">${item.price} kr</span>
                            </div>
                            <div style="font-size: 0.85em; color: #666; margin-top: 2px;">
                                Moms ${vatRate}%: ${itemVat.toFixed(2)} kr
                            </div>
                        </div>`;
                    }).join('')}
                    
                    <div style="margin-top: 15px; padding-top: 15px; border-top: 2px solid #1e3c72;">
                        <div style="display: flex; justify-content: space-between; padding: 5px 0;">
                            <span>Summa ex. moms:</span>
                            <span>${totalExVat.toFixed(2)} kr</span>
                        </div>
                        
                        ${Object.values(vatGroups).map(group => `
                            <div style="display: flex; justify-content: space-between; padding: 5px 0; color: #666;">
                                <span>Moms ${group.rate}%:</span>
                                <span>${group.totalVat.toFixed(2)} kr</span>
                            </div>
                        `).join('')}
                        
                        <div style="display: flex; justify-content: space-between; padding: 10px 0 5px 0; font-size: 1.2em; font-weight: bold; color: #1e3c72; border-top: 1px solid #dee2e6; margin-top: 10px;">
                            <span>ATT BETALA:</span>
                            <span>${receiptData.total} kr</span>
                        </div>
                    </div>
                </div>
                
                <div style="background: #e7f3ff; padding: 15px; border-radius: 10px; text-align: center; margin-bottom: 20px;">
                    <p style="margin: 0; color: #1e3c72;"><strong>Betalt via Swish: 1234701777</strong></p>
                    <p style="margin: 5px 0 0 0; font-size: 0.9em; color: #666;">Org.nr: 123456-7890</p>
                </div>
                
                <div style="text-align: center; color: #666; font-size: 0.9em; margin-top: 20px;">
                    <p>Tack för ditt köp!</p>
                    <p>Välkommen åter till BIK Karlskoga café</p>
                </div>
            `;
            
            const overlay = document.getElementById('receiptOverlay');
            overlay.style.display = 'flex';
            document.body.style.overflow = 'hidden';
            
            showStatus('Kvittoförhandsvisning i fullskärm', 'success');
        }

        // Stäng kvitto-fullskärm
        function closeReceiptFullscreen() {
            const overlay = document.getElementById('receiptOverlay');
            overlay.style.display = 'none';
            document.body.style.overflow = 'auto';
            showStatus('Förhandsvisning stängd', 'success');
        }
        
